<idea-plugin>
  <id>com.dengzii.plugin.converter</id>
  <name>Simplify,Traditional Chinese Converter(简繁转换)</name>
  <version>1.0</version>
  <vendor email="denua@foxmail.com" url="https://dengzii.com">dengzi</vendor>

  <description><![CDATA[
  The simplify chinese and traditional chinese converter.
  keyboard-shortcut: ctrl + alt + 3
  or ToolsMenu > last item
  GitHub: <a href="https://github.com/MrDenua/SimToTranTranslator">MrDenua/SimToTranTranslator</a>
]]></description>

  <change-notes><![CDATA[
    2019-11-22 1.0: The simplify chinese and traditional chinese converter.
  ]]>
  </change-notes>
  <depends>com.intellij.modules.java</depends>
  <depends>org.jetbrains.kotlin</depends>

  <idea-version since-build="173.0"/>
  <extensions defaultExtensionNs="com.intellij">

  </extensions>

  <actions>
    <action id="com.dengzii.plugin.converter.MainAction" class="com.dengzii.plugin.converter.MainAction"
            text="SimTraConverter" description="Simplify, traditional chinese convert">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
      <keyboard-shortcut first-keystroke="ctrl alt 3" keymap="$default"/>
    </action>
  </actions>

</idea-plugin>